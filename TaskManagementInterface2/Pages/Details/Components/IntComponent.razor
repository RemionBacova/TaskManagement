@using TaskManagementInterface.Services.Info
@using TaskManagementInterface.Data.Models.Info 
<div>
    <div class="form-inline">
        <div class="form-group col-md-3">
            <SfTextBox Placeholder='Type Info' @bind-Value="infoModel.nomination"></SfTextBox>
        </div>
        <div class="form-group col-md-3">
            <SfNumericTextBox TValue="int?"  @bind="CurrentValue" @bind:event="oninput"></SfNumericTextBox>
        </div>
    </div>
</div>

@code {

    private int CurrentValue = 0;
    private SelectInfo_Model infoModel = new SelectInfo_Model();
    public InfoServices _infoServices = new InfoServices();
    public List<SelectInfo_Model> dataInfo = new List<SelectInfo_Model>();

    public async Task OnInitializedAsync(string Entity,string ElementID, string TypeInfoID)
    {
        dataInfo = await _infoServices.SelectEntitiesInfo(Entity, ElementID, TypeInfoID);
        CurrentValue = int.Parse(dataInfo[0].value);

    }

}
