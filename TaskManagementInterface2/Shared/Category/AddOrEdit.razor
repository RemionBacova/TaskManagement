                <div class="form-group col-md-12">
                    <label class="col-md-5" style="justify-content: left" >Code:</label>
                    <input class="form-control col-md-6" type="text"
                           @bind="kategoriModel.code" />
            </div>
        </div>


        <br />
        <div class="form-inline">
