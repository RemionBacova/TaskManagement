                    <label class="col-md-5 " style="justify-content: left">Parent Name:</label> 
                    <input class="form-control col-md-6" type="text" value=@ParentName  />
                    <button class="form-control col-md-1" @onclick="ButtonParent">...</button>

            </div>
        </div>

        <br />

